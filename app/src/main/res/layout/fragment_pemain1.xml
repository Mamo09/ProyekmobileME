<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#030f22"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".create_team.pemain.Pemain1Fragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingTop="20dp"
        android:text="Daftar Pemain"
        android:textColor="#CCFFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNamaPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPemain1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" *"
        android:textColor="#B3FF0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        app:layout_constraintLeft_toRightOf="@+id/textNamaPemain1"
        app:layout_constraintTop_toBottomOf="@id/textPemain1" />

    <TextView
        android:id="@+id/textKetNamaPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama Lengkap"
        android:textColor="#CCFFFFFF"
        android:textSize="11dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNamaPemain1" />
    <EditText
        android:id="@+id/inputNamaPemain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Jawaban Anda"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textColorHint="#99FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textKetNamaPemain1"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/textNIKNIMPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIK/NIM"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputNamaPemain1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" *"
        android:textColor="#B3FF0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        app:layout_constraintLeft_toRightOf="@+id/textNIKNIMPemain1"
        app:layout_constraintTop_toBottomOf="@id/inputNamaPemain1" />

    <TextView
        android:id="@+id/textKetNIKNIMPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastikan Tidak Memakai Pemisah"
        android:textColor="#CCFFFFFF"
        android:textSize="11dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNIKNIMPemain1" />
    <EditText
        android:id="@+id/inputNIKNIMPemain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Jawaban Anda"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textColorHint="#99FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textKetNIKNIMPemain1"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/textServerPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server in-game"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputNIKNIMPemain1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" *"
        android:textColor="#B3FF0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        app:layout_constraintLeft_toRightOf="@+id/textServerPemain1"
        app:layout_constraintTop_toBottomOf="@id/inputNIKNIMPemain1" />

    <TextView
        android:id="@+id/textKetServerPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yang didalam kurung"
        android:textColor="#CCFFFFFF"
        android:textSize="11dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textServerPemain1" />
    <EditText
        android:id="@+id/inputServerPemain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Jawaban Anda"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textColorHint="#99FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textKetServerPemain1"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/textIDPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID in-game"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputServerPemain1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" *"
        android:textColor="#B3FF0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        app:layout_constraintLeft_toRightOf="@+id/textIDPemain1"
        app:layout_constraintTop_toBottomOf="@id/inputServerPemain1" />

    <TextView
        android:id="@+id/textKetIDPemain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yang didalam kurung"
        android:textColor="#CCFFFFFF"
        android:textSize="11dp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIDPemain1" />
    <EditText
        android:id="@+id/inputIDPemain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Jawaban Anda"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textColorHint="#99FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textKetIDPemain1"
        tools:layout_editor_absoluteX="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputIDPemain1">

        <TextView
            android:id="@+id/movePemain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:padding="5dp"
            android:background="#206AB5"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/movePemain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:padding="5dp"
            android:background="@drawable/stroke"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/movePemain3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:padding="5dp"
            android:background="@drawable/stroke"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/movePemain4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:padding="5dp"
            android:background="@drawable/stroke"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/movePemain5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:padding="5dp"
            android:background="@drawable/stroke"
            android:textColor="@color/white" />

    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>