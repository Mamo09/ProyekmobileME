<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.TugasProyek.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TugasProyek.AppWidgetContainer">

    <LinearLayout

        style="@style/Widget.TugasProyek.AppWidget.InnerView"
        android:layout_width="395dp"
        android:layout_height="687dp"
        android:background="@drawable/borderwidget"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/me" />

            <TextClock
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:fontFamily="@font/sora"
                android:paddingTop="6dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextBerjalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/appwidget_text"
            android:fontFamily="@font/sora"
            android:text="@string/appwidget_text"
            android:textColor="#FFFFff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClick"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:background="#5ebbff"
            android:fontFamily="@font/sora"
            android:text="Klik Disini"
            android:textColor="#000000"
            android:textSize="8sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </LinearLayout>
</RelativeLayout>