<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030f22"
    tools:context=".fragments.PostingFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postingHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:text="Conoth  headon Conoth heading headon Conoth heading headon"
                android:textColor="#fff"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postingAuthor"
                android:paddingLeft="16dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:text="Michael B. Jordan"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postingHeading"/>

            <TextView
                android:id="@+id/dot"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:text="â€¢"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/postingAuthor"
                android:layout_below="@+id/postingHeading"/>


            <TextView
                android:id="@+id/postingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Agustus 1945"
                android:textColor="#fff"
                android:textSize="15dp"
                android:layout_below="@+id/postingHeading"
                android:layout_toRightOf="@id/dot"/>

            <ImageView
                android:id="@+id/postingImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/rubytournament"
                android:layout_below="@+id/postingAuthor"/>


            <TextView
                android:id="@+id/postingBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postingImage"
                android:padding="9dp"
                android:text="@string/content_2"
                android:textColor="#fff"
                android:textSize="15dp" />
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>