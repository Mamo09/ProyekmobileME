<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NamaPemain"
    android:background="#030f22">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="20dp"
                android:text="Input Data Pemain"
                android:textColor="#CCFFFFFF"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNamaPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="#CCFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPemain1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#B3FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="2dp"
                app:layout_constraintLeft_toRightOf="@+id/textNamaPemain1"
                app:layout_constraintTop_toBottomOf="@id/textPemain1" />

            <TextView
                android:id="@+id/textKetNamaPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Nama Lengkap"
                android:textColor="#CCFFFFFF"
                android:textSize="11dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNamaPemain1" />
            <EditText
                android:id="@+id/inputNamaPemain1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Jawaban Anda"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textColorHint="#99FFFFFF"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginRight="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textKetNamaPemain1"
                tools:layout_editor_absoluteX="18dp" />


            <TextView
                android:id="@+id/textNIKNIMPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK/NIM"
                android:textColor="#CCFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputNamaPemain1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#B3FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="2dp"
                app:layout_constraintLeft_toRightOf="@+id/textNIKNIMPemain1"
                app:layout_constraintTop_toBottomOf="@id/inputNamaPemain1" />

            <TextView
                android:id="@+id/textKetNIKNIMPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pastikan Tidak Memakai Pemisah"
                android:textColor="#CCFFFFFF"
                android:textSize="11dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNIKNIMPemain1" />
            <EditText
                android:id="@+id/inputNIKNIMPemain1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Jawaban Anda"
                android:inputType="number"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textColorHint="#99FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginRight="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textKetNIKNIMPemain1"
                tools:layout_editor_absoluteX="18dp" />

            <TextView
                android:id="@+id/textServerPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server in-game"
                android:textColor="#CCFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputNIKNIMPemain1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#B3FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="2dp"
                app:layout_constraintLeft_toRightOf="@+id/textServerPemain1"
                app:layout_constraintTop_toBottomOf="@id/inputNIKNIMPemain1" />

            <TextView
                android:id="@+id/textKetServerPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yang didalam kurung"
                android:textColor="#CCFFFFFF"
                android:textSize="11dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textServerPemain1" />
            <EditText
                android:id="@+id/inputServerPemain1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Jawaban Anda"
                android:inputType="number"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textColorHint="#99FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginRight="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textKetServerPemain1"
                tools:layout_editor_absoluteX="18dp" />

            <TextView
                android:id="@+id/textIDPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID in-game"
                android:textColor="#CCFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputServerPemain1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#B3FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="2dp"
                app:layout_constraintLeft_toRightOf="@+id/textIDPemain1"
                app:layout_constraintTop_toBottomOf="@id/inputServerPemain1" />

            <TextView
                android:id="@+id/textKetIDPemain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yang didalam kurung"
                android:textColor="#CCFFFFFF"
                android:textSize="11dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textIDPemain1" />
            <EditText
                android:id="@+id/inputIDPemain1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Jawaban Anda"
                android:textColor="@color/white"
                android:inputType="number"
                android:padding="15dp"
                android:textColorHint="#99FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginRight="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textKetIDPemain1"
                tools:layout_editor_absoluteX="18dp" />


            <TextView
                android:id="@+id/textNamaTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tim Anda"
                android:textColor="#CCFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputIDPemain1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#B3FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingLeft="2dp"
                app:layout_constraintLeft_toRightOf="@+id/textNamaTeam"
                app:layout_constraintTop_toBottomOf="@id/inputIDPemain1" />

            <TextView
                android:id="@+id/textNamateam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama tim anda"
                android:textColor="#CCFFFFFF"
                android:textSize="11dp"
                android:paddingLeft="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNamaTeam" />
            <EditText
                android:id="@+id/inputNamateam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Jawaban Anda"
                android:textColor="@color/white"
                android:padding="15dp"
                android:inputType="text"
                android:textColorHint="#99FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginRight="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textNamateam2"
                tools:layout_editor_absoluteX="18dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner1">

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#5EBBFF"
                    android:text="Simpan" />

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#5EBBFF"
                    android:text="Hapus" />
            </LinearLayout>

            <Spinner

                android:id="@+id/spinner1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:minHeight="48dp"
                android:padding="10dp"
                android:popupBackground="@color/colorButton"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputNamateam"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>